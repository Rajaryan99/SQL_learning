<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MongoDB</title>
    <link rel="stylesheet" href="style.css">
    <script src="https://cdn.tailwindcss.com"></script>

</head>

<body>
    <div class="w-full h-screen bg-zinc-900 p-10 text-white">
        <div class="nav mb-10">
            <a href="/" class="text-blue-500">Go home</a>
        </div>
        <h1 text-3xl>All User</h1>
        <hr>
        <div class="users flex gap-3 flex-wrap">
            <% Users.forEach(function (user){%>
                <div class="user w-72 p-4 bg-zinc-800 rounded-lg mt-3">
                    <div class="w-full h-52 rounded-lg bg-zinc-700">
                        <img src="<%= user.image%>" alt="">
                    </div>
                    <h3 class="text-2xl mt-3 tracking-tighter">
                        <%= user.name%>
                    </h3>
                    <h5 class="text-zinc-500">
                        <%=user.email%>
                    </h5>
                    <div class="mt-5">
                        <a href="" class="text-zinc-400">Edit user</a>
                        <a href="" class="text-red-500 ml-2">Delete User</a>
                    </div>
                </div>
                <% }) %>

        </div>
    </div>


</body>

</html>